<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<h2>Order details  </h2>
<% current_user.order_bookings.each do |order| %>
	<section class="h-100 gradient-custom">
		<div class="container py-5 h-100">
			<div class="row d-flex justify-content-center align-items-center h-100">
				<div class="col-lg-10 col-xl-8">
					<div class="card" style="border-radius: 10px;">
					  <div class="card-header px-4 py-5">
					    <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #a8729a;">Anna</span>!</h5>
					  </div>
					  <div class="card-body p-4">
					    <div class="d-flex justify-content-between align-items-center mb-4">
					      <p class="lead fw-normal mb-0" style="color: #a8729a;">Receipt</p>
					      <p class="small text-muted mb-0">Receipt Voucher : 1KAU9-84UIL</p>
					    </div>
						    <% order.product_id.each do |product_id|%>
						    	<% product = Product.find_by(id: product_id) %> 
							    <div class="card shadow-0 border mb-4">
							      <div class="card-body">
							        <div class="row">
							          <div class="col-md-2">
							            <%= image_tag product.image_url,  class: "img-fluid", alt: "Phone" %>
							          </div>
							          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
							            <p class="text-muted mb-0"> <%#= order.product_id.name%></p>
							          </div>
							          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
							            <p class="text-muted mb-0 small"><%= product.name %></p>
							          </div>
							          
							          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
							            <p class="text-muted mb-0 small">Qty: <%#= product_id.quantity %></p>
							          </div>
							          <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
							            <p class="text-muted mb-0 small"><%= product.calculate_discount(product) %></p>
							          </div>
							        </div>
							       
							      </div>
							    </div>
							  <% end %>  
							   <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
							        <div class="row d-flex align-items-center">
							          <div class="col-md-2">
							            <p class="text-muted mb-0 small">Track Order</p>
							          </div>
							          <div class="col-md-10">
							            <div class="progress" style="height: 6px; border-radius: 16px;">
							              <div
							                class="progress-bar"
							                role="progressbar"
							                style="width: 20%; border-radius: 16px; background-color: #a8729a;"
							                aria-valuenow="65"
							                aria-valuemin="50"
							                aria-valuemax="100"
							              ></div>
							            </div>
							            <div class="d-flex justify-content-around mb-1">
							              <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
							              <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
							            </div>
							          </div>
							        </div>

							    <div class="d-flex justify-content-between pt-2">
							      <p class="fw-bold mb-0">Order Details</p>
							      <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> <%= order.amount_total %></p>
							    </div>

							    <div class="d-flex justify-content-between pt-2">
							      <p class="text-muted mb-0">Invoice Number : <%= order.payment_intent %></p>
							      <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> $19.00</p>
							    </div>

							    <div class="d-flex justify-content-between">
							      <p class="text-muted mb-0">Invoice Date : <%= order.created_at %></p>
							      <p class="text-muted mb-0"><span class="fw-bold me-4">GST 18%</span> 123</p>
							    </div>

							    <div class="d-flex justify-content-between mb-5">
							      <p class="text-muted mb-0">Phone number  : <%= order.phone%></p>
							      <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
							    </div>
							    <div class="d-flex justify-content-between mb-5">
							      <p class="text-muted mb-0"><span class="fw-bold me-4">Cash On Delivery:</span> <strong><%= order.cash_on_delivery %></strong> </p>
							      <p class="text-muted mb-0"><span class="fw-bold me-4">Refund:</span> <strong><%= OrderStatus.where(order_id: order.id).last.refund rescue nil %></strong> </p>
							    </div>
							    <div class="d-flex justify-content-between mb-5">
							      <p class="text-muted mb-0">Address  : 
							      	<% @address = Address.find_by(id: order.address_id) %>
							      	<% if @address.present? %>
							      		<%= @address.line1 %>, <%= @address.line2 %>, <%= @address.landmark %>, <%= @address.state %>, <%= @address.pincode %></p>
							      	<% end %>	
							    </div>
					  </div>
						  <div class="card-footer border-0 px-4 py-5" style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
							  	<% if OrderStatus.where(order_id: order.id).map(&:status).include?("cancelled") %>
							  		<button type="button" class="btn btn-danger" disabled>order has been canceled!</button>

	            			<% else %>
	               		<a href="/cancel/<%= order.id %>" data-tip="Cancel Order" onclick="alert('cancel order')" class="btn btn-danger">Cancel order</a>
			            <% end %>	
						<div class="container">
			            <br>
			            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#form"> See Modal with Form </button>
						<div class="modal fade" id="form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
						    <div class="modal-dialog modal-dialog-centered" role="document">
						        <div class="modal-content">
						            <div class="text-right cross" data-dismiss="modal"> <i class="fa fa-times mr-2"></i> </div>
						            <div class="card-body text-center"> <img src=" https://i.imgur.com/d2dKtI7.png" height="100" width="100">
						                <div class="comment-box text-center">
						                		<%= form_with(model: @review, local: true) do |form| %>
																	<% if @review.errors.any? %>
																	<div id="error_explanation">
																	<h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

																	<ul>
																	<% @review.errors.full_messages.each do |message| %>
																	<li><%= message %></li>
																	<% end %>
																	</ul>
																	</div>
																	<% end %>
						                    <h4>Add a comment</h4>
						                    <div class="rating"> <input type="radio" name="rating" value="5" id="5"><label for="5">☆</label> <input type="radio" name="rating" value="4" id="4"><label for="4">☆</label> <input type="radio" name="rating" value="3" id="3"><label for="3">☆</label> <input type="radio" name="rating" value="2" id="2"><label for="2">☆</label> <input type="radio" name="rating" value="1" id="1"><label for="1">☆</label> </div>
						                    <div class="comment-area">  <%= form.text_area :comment, class: "form-control", :required => true,  placeholder: "What is your views?" %> </div><br><br>
						                    
						                    <div  style="text-align: center;">
																<%= form.submit :submit, class: "btn btn-info"%>
																<%= link_to 'Back', orders_path, class: "btn btn-info" %>
																</div>
																</form><br><br>
																</div>
																<% end %>
											
					    	<h5 class="d-flex align-items-center justify-content-end text-white">Total paid: <span class="h2 mb-0 ms-2"><%= order.amount_total %></span></h5>
					</div>
				</div>
			</div>
		</div>
	</section><br>
<%end%>

