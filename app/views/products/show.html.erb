  <body >
    <div class="container" style="height:450px">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">
                        <div class="-pic tab-content">
                          <div class="tab-pane active" ><%= image_tag @product.image_url %></div>
