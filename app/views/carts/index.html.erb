<% if @cart.subtotal <= 0 %>
<div class="cart">
   <h1 style="text-align: center;"> Your cart is Empty <br>
   <a href="/products" class="btn btn-warning "><i class="fa-brands fa-product-hunt"></i>Add Your product </a>
</h1>
</div>
<% else %>
<div class="container px-4 py-5 mx-auto">
<a href="/cart_clear/<% cart_clear_url %>" class="btn btn-danger">Empty Cart  <i class="fa fa-shopping-cart" aria-hidden="true"></i></a></hr>
<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
          <div>
            <p class="mb-0"><span class="text-muted">Sort by:</span> <a href="#!" class="text-body">price <i
                  class="fas fa-angle-down mt-1"></i></a></p>
          </div>
        </div>
<% @cart_items.each do |product| %>
        <div class="card rounded-3 mb-4">
          <div class="card-body p-4">
            <div class="row d-flex justify-content-between align-items-center">
              <div class="col-md-2 col-lg-2 col-xl-2">
                <%= image_tag product.item.image_url %> 
              </div>
              <div class="col-md-3 col-lg-3 col-xl-3">
                <p class="lead fw-normal mb-2"><%= product.item.name %></p>
              </div>
              <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                Quantity <%= product.quantity %>
              </div>
              <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                <h5 class="mb-0">&#8377;<%= product.item.calculate_discount(product.item) %></h5>
              </div>
              <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                <a href="/remove_to_cart/<%= product.item.id %>" class="text-danger"><i class="fas fa-trash fa-lg"></i></a>
              </div>
            </div>
          </div>
        </div>
<% end %>
        <div class="card mb-4">
          <div class="card-body p-4 d-flex flex-row">
            <div class="form-outline flex-fill">
              <input type="text" id="form1" class="form-control form-control-lg" />
              <label class="form-label" for="form1">Discound code</label>
            </div>
            <button type="button" class="btn btn-outline-warning btn-lg ms-3">Apply</button>
          </div>
        </div>

        <div class="card">
          <div class="card-body">
             <form action="/addresses" method="GET">
              <button type="submit" class="btn btn-warning btn-block btn-lg"><i class="fa fa-shopping-bag" aria-hidden="true"></i> cash on delivery &#8377;<%= @cart.subtotal %></button>
            </form><br>
            <form action="/create-checkout-session" method="POST">
              <button type="submit" class="btn btn-warning btn-block btn-lg"><i class="fa fa-shopping-bag" aria-hidden="true"></i> Checkout &#8377;<%= @cart.subtotal %></button>
            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
<% end %>

<style type="text/css">
  .cart{
  margin-top: 11%;
  margin-bottom: 15%;
  height: 100%;
  width: 100%;
}
</style>